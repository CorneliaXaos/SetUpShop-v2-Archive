{
    "name": "python3",
    "description": "Python 3 libraries.",
    "install": {
        "mode": "apt",
        "targets": [
            "python3",
            "python3-dev",
            "python3-numpy",
            "python3-scipy",
            "python3-pil",
            "python3-pip",
            "python3-flask",
            "python3-setuptools"
        ]
    },
    "post-exec": [
        "update-alternatives --config python || return 0"
    ]
}
